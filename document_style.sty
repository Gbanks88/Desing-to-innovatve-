\ProvidesPackage{document_style}

% Required packages
\RequirePackage{geometry}
\RequirePackage{titlesec}
\RequirePackage{titletoc}
\RequirePackage{fancyhdr}
\RequirePackage{enumitem}
\RequirePackage{xcolor}
\RequirePackage{hyperref}
\RequirePackage{graphicx}
\RequirePackage{setspace}

% Page geometry - adjusted for header image
\geometry{
  letterpaper,
  top=2.5in,  % Increased to make room for header image
  bottom=1in,
  left=1in,
  right=1in,
  headheight=1.5in  % Increased to accommodate header image
}

% Colors
\definecolor{headingcolor}{RGB}{0,0,0}
\definecolor{linkcolor}{RGB}{0,0,128}

% Header image setup
\fancypagestyle{firstpage}{%
  \fancyhf{}
  \renewcommand{\headrulewidth}{0pt}
  \fancyhead[C]{\includegraphics[width=\textwidth,height=1.5in,keepaspectratio]{header_image}}
}

% Regular page style
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0.4pt}
\fancyhead[R]{\thepage}

% Title format
\titleformat{\section}
  {\Large\bfseries}{\thesection}{1em}{}
\titleformat{\subsection}
  {\large\bfseries}{\thesubsection}{1em}{}

% Spacing
\setlength{\parskip}{1em}
\setlength{\parindent}{0pt}
\onehalfspacing

% List styling
\setlist{noitemsep}
\setlist[itemize]{leftmargin=*}
\setlist[enumerate]{leftmargin=*}

% Hyperlink styling
\hypersetup{
  colorlinks=true,
  linkcolor=linkcolor,
  filecolor=linkcolor,
  urlcolor=linkcolor,
}

% Table of contents styling
\titlecontents{section}
  [1.5em]
  {\vspace{0.5em}\bfseries}
  {\contentslabel{2.3em}}
  {\hspace*{-2.3em}}
  {\titlerule*[1pc]{.}\contentspage}
